@model AidImpactTraining.Models.Post
@{
    Layout = "_Layout";
}

<div class="container mb-5">
    <article class="mt-5 mb-3">
        <h1>@Model.Title</h1>
        <div class="details">
            Créé <span>@Model.Posted</span> par <span>@Model.Author</span>
        </div>
        <div class="content">
            @Model.Body
        </div>
    </article>
    <div class="container"><hr></div>
</div>

